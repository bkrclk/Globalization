@model Globalization.Dto.ViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer



<div class="container">
    <h3>@SharedLocalizer["LoginPage"]</h3>


    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="col-md-4">

            <div class="form-group">
                @SharedLocalizer["UserName"]
                @Html.TextBoxFor(x => x.UserModel.UserName, new { @class = "form-control", placeholder = @SharedLocalizer["UserName"].Value})
                
            </div>

            <div class="form-group">
                @SharedLocalizer["Email"]
                @Html.TextBoxFor(x => x.UserModel.Email, new { @class = "form-control", placeholder = SharedLocalizer["Email"].Value })
            </div>

            <div class="form-group">
                @SharedLocalizer["Phone"]
                @Html.TextBoxFor(x => x.UserModel.Phone, new { @class = "form-control", placeholder = SharedLocalizer["Phone"].Value })
            </div>

            <div class="form-group">
                @SharedLocalizer["Adress"]
                @Html.TextBoxFor(x => x.UserModel.Adress, new { @class = "form-control", placeholder = SharedLocalizer["Adress"].Value })
            </div>

            <div class="form-group">
                @SharedLocalizer["Password"]
                @Html.TextBoxFor(x => x.UserModel.Password, new { @class = "form-control", placeholder = SharedLocalizer["Password"].Value })
            </div>

            <div class="form-group">
                <button type="submit" name="submit" class="btn btn-success">@SharedLocalizer["Login"]</button>
                <div>@ViewBag.Veri</div>
                <div>@TempData["Veri"]</div>

            </div>

        </div>

    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}